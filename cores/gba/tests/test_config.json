{
  "description": "GBA Emulator Test Configuration",
  "timeout_seconds": 60,
  "frame_limit": 1200,

  "repositories": {
    "jsmolka": {
      "url": "https://github.com/jsmolka/gba-tests.git",
      "directory": "gba-test-roms",
      "description": "Basic CPU, memory, BIOS, and save type tests"
    },
    "alyosha": {
      "url": "https://github.com/alyosha-tas/gba-tests.git",
      "directory": "alyosha-gba-tests",
      "description": "Extended tests with PPU, prefetcher, timing, IRQ interactions (fork of jsmolka)"
    },
    "nba-hw-test": {
      "url": "https://github.com/nba-emu/hw-test.git",
      "directory": "nba-hw-test",
      "description": "NanoBoyAdvance hardware tests (DMA, IRQ, timing)"
    },
    "hades": {
      "url": "https://github.com/hades-emu/Hades-Tests.git",
      "directory": "hades-tests",
      "description": "Hades emulator tests (BIOS open bus, DMA latching, timers)"
    }
  },

  "test_suites": {
    "arm": {
      "name": "ARM Instruction Set",
      "description": "Tests ARM mode CPU instructions including data processing, branches, multiply, load/store, and block transfers",
      "priority": "critical",
      "repository": "jsmolka",
      "tests": [
        {
          "path": "arm/arm.gba",
          "expected": "pass",
          "description": "Comprehensive ARM instruction test suite"
        }
      ]
    },

    "thumb": {
      "name": "Thumb Instruction Set",
      "description": "Tests Thumb mode CPU instructions",
      "priority": "critical",
      "repository": "jsmolka",
